<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Company</th>
    <th>Email</th>
    <th>Salary</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <td><%= job.company %></td>
    <td><%= job.email %></td>
    <td><%= job.salary %></td>
    <td><%= job.description %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

